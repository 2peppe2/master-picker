model CoursesRequirement {
  id   Int         @id @default(autoincrement())
  type CoursesType @default(COURSE_SELECTION)

  // minCount: 1 + courses.length: 1 = Mandatory
  // minCount: 2 + courses.length: 5 = Elective (pick 2 of 5)
  minCount Int @default(1)

  courses       CourseRequirementCourse[]
  requirementId Int
  requirement   Requirement               @relation(fields: [requirementId], references: [id], onDelete: Cascade)
}

enum CoursesType {
  COURSE_SELECTION
}
